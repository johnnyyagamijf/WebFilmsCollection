@model IEnumerable<WebFilmsCollection.Application.ViewModels.FilmViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Adicionar novo filme</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Description)
            </td>
            <td>
                @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary glyphicon glyphicon-pencil " })
                @Html.ActionLink("", "Details", new { id = item.Id }, new {@class= "btn btn-secondary glyphicon glyphicon-eye-open" })
                @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "btn btn-secondary glyphicon glyphicon-trash" }) 
            </td>
        </tr>
}
    </tbody>
</table>
